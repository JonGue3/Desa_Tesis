<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.tesis.v1.entity.TActivityEntity</class>
        <class>com.tesis.v1.entity.TActivityPointsEntity</class>
        <class>com.tesis.v1.entity.TActivityStatusEntity</class>
        <class>com.tesis.v1.entity.TMenuEntity</class>
        <class>com.tesis.v1.entity.TProfileEntity</class>
        <class>com.tesis.v1.entity.TProyectEntity</class>
        <class>com.tesis.v1.entity.TTokenEntity</class>
        <class>com.tesis.v1.entity.TUserEntity</class>
        <class>com.tesis.v1.entity.TUserStatusEntity</class>
        <class>com.tesis.v1.entity.UserProyectEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@127.0.0.1:1521:XE"/>
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
